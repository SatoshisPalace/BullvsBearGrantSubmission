{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryMsg",
  "oneOf": [
    {
      "type": "object",
      "required": [
        "get_contest"
      ],
      "properties": {
        "get_contest": {
          "type": "object",
          "required": [
            "contest_id"
          ],
          "properties": {
            "contest_id": {
              "type": "integer",
              "format": "uint32",
              "minimum": 0.0
            }
          }
        }
      },
      "additionalProperties": false
    },
    {
      "type": "object",
      "required": [
        "get_snip20s"
      ],
      "properties": {
        "get_snip20s": {
          "type": "object"
        }
      },
      "additionalProperties": false
    },
    {
      "type": "object",
      "required": [
        "get_contest_creation_msg_binary"
      ],
      "properties": {
        "get_contest_creation_msg_binary": {
          "type": "object",
          "required": [
            "contest_info",
            "contest_info_signature_hex",
            "outcome_id"
          ],
          "properties": {
            "contest_info": {
              "$ref": "#/definitions/ContestInfo"
            },
            "contest_info_signature_hex": {
              "type": "string"
            },
            "outcome_id": {
              "type": "integer",
              "format": "uint8",
              "minimum": 0.0
            }
          }
        }
      },
      "additionalProperties": false
    },
    {
      "type": "object",
      "required": [
        "get_bet_contest_msg_binary"
      ],
      "properties": {
        "get_bet_contest_msg_binary": {
          "type": "object",
          "required": [
            "contest_id",
            "outcome_id"
          ],
          "properties": {
            "contest_id": {
              "type": "integer",
              "format": "uint32",
              "minimum": 0.0
            },
            "outcome_id": {
              "type": "integer",
              "format": "uint8",
              "minimum": 0.0
            }
          }
        }
      },
      "additionalProperties": false
    }
  ],
  "definitions": {
    "ContestInfo": {
      "type": "object",
      "required": [
        "id",
        "options",
        "time_of_close",
        "time_of_resolve"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0.0
        },
        "options": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ContestOutcome"
          }
        },
        "time_of_close": {
          "type": "integer",
          "format": "int32"
        },
        "time_of_resolve": {
          "type": "integer",
          "format": "int32"
        }
      }
    },
    "ContestOutcome": {
      "type": "object",
      "required": [
        "id",
        "name"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "format": "uint8",
          "minimum": 0.0
        },
        "name": {
          "type": "string"
        }
      }
    }
  }
}
